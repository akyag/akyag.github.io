---
import Page from "../layouts/Page.astro";
import Head from "../layouts/Head.astro";
import Thanks from "../images/mail.svg";
import Button from "../components/Button.astro";

const meta = {
  title: "Thanks",
  description: "Greetings, I received your email.",
};
---

<Page>
  <Head slot="head" {meta} />
  <!-- Full body element start -->

  <main
    class="container relative z-10 mx-auto px-8 py-12 md:py-0 lg:px-24 2xl:mb-44"
  >
    <div
      class="mx-auto flex max-w-full flex-col place-content-center items-center gap-x-2 text-white md:flex-row"
    >
      <div class="flex place-content-center items-center px-8 py-24">
        {
          /*  <img
          class="h-40 md:h-56 xl:h-72 dark:filter dark:brightness-75 dark:contrast-125"
          src={Thanks}
          alt="Message Sent"
          width="361"
          height="324"
        />  */
        }
        <img
          class="h-auto w-[200px] dark:brightness-75 dark:contrast-125 dark:filter lg:w-[300px] 2xl:w-[400px]"
          src={Thanks}
          alt="Message Sent"
        />
      </div>
      <div class="flex flex-col place-content-center items-center p-4">
        <div class="text-f-2xl font-display font-bold">
          <span>Thanks !!</span>
        </div>
        <div class="mt-4">
          <p>Your message was sent successfully.</p>
          <p>I will get back to you as soon as possible.</p>
        </div>
        <Button
          href="/"
          color="bg-geraldine-700 hover:bg-geraldine-600 dark:bg-geraldine-400 dark:hover:bg-geraldine-500 mt-4"
          >Back to Home</Button
        >
      </div>
    </div>
  </main>
  <!-- Full body element end -->
</Page>
