---
import Page from "../layouts/Page.astro";
import Head from "../layouts/Head.astro";
import Mail from "../images/mail.svg";
import Button from "../components/Button.astro";
import { Picture } from "@astrojs/image/components";

const meta = {
  title: "Thanks",
  description: "Greetings, I received your email.",
};
---

<Page>
  <Head slot="head" {meta} />
  <!-- Full body element start -->

  <main
    class=":uno: container mx-auto py-12 px-8 z-10 relative md:py-0 lg:px-24 2xl:mb-60"
  >
    <div
      class=":uno: flex flex-col mx-auto max-w-full gap-x-2 place-content-center items-center md:flex-row"
    >
      <div
        class=":uno: flex py-12 md:py-24 px-8 place-content-center items-center"
      >
        <Picture
          class={":uno: h-auto dark:filter dark:brightness-75 dark:contrast-125"}
          src={Mail}
          widths={[200, 300, 400]}
          sizes="(max-width:768px) 200px, (max-width:1024px) 300px, 400px"
          aspectRatio={1.11}
          alt="Message Sent"
        />
      </div>
      <div class=":uno: flex flex-col p-4 place-content-center items-center">
        <div class=":uno: font-display text-f-3xl fw700">
          <span>Thanks !!</span>
        </div>
        <div class=":uno: mt-4 text-center text-f-lg">
          <p>Your message was sent successfully.</p>
          <p>I will get back to you as soon as possible.</p>
        </div>
        <Button href="/" color="bg-teal-9 hover:bg-teal-10 mt-4">
          Back to Home
        </Button>
      </div>
    </div>
  </main>
  <!-- Full body element end -->
</Page>
