---
import Page from "../layouts/Page.astro";
import Head from "../layouts/Head.astro";
import notFound from "../images/not-found.svg";
import Button from "../components/Button.astro";

const meta = {
  title: "404 error",
  description: "Page not found!",
};
---

<Page>
  <Head slot="head" {meta} />
  <!-- Full body element start -->

  <main
    class="container mx-auto my-24 py-24 px-8 z-10 relative md:my-0 lg:my-12 lg:px-24 2xl:my-32"
  >
    <div
      class="flex flex-col mx-auto max-w-full flex-shrink-0 text-white gap-x-2 gap-y-4 place-content-center items-center md:flex-row"
    >
      <div class="flex place-content-center items-center">
        {
          /*   <img
               class="h-48 md:h-64 xl:h-72 dark:filter dark:brightness-75 dark:contrast-125"
               src={notFound}
               alt="404 Page not found!"
               width="596"
               height="324"
             /> */
        }
        <img
          class="h-auto w-[300px] lg:w-[450px] 2xl:w-[600px] dark:filter dark:brightness-75 dark:contrast-125"
          src={notFound}
          alt="404 Page not found!"
        />
      </div>
      <div
        class="flex flex-col space-y-4 p-4 place-content-center items-center"
      >
        <div class="font-display text-f-xl text-center fw700">
          <span>Sorry we couldn't find this page.</span>
        </div>
        <div class="text-center">
          <span
            >But don't worry, you can find plenty of other things on our
            homepage.</span
          >
        </div>
        <Button
          href="/"
          color="bg-geraldine-700 hover:bg-geraldine-600 dark:bg-geraldine-400 dark:hover:bg-geraldine-500"
          >Back to Home</Button
        >
      </div>
    </div>
  </main>
  <!-- Full body element end -->
</Page>
