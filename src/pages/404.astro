---
import Layout from "../layouts/PageLayout.astro";
import notFound from "../images/not-found.svg";
import Button from "../components/Button.astro";

const meta = {
  title: "404 error",
  description: "Page not found!",
};
---

<Layout {meta}>
  <!-- Full body element start -->

  <div class="relative z-10 mb-48 container p-8 lg:p-24 mx-auto">
    <div
      class="flex flex-row flex-wrap gap-2 items-center place-content-center mx-auto max-w-7xl text-gray-700 dark:text-white 2xl:text-white mt-40 md:mt-4 gap-y-16 lg:gap-y-2"
    >
      <div class="flex items-center place-content-center">
        {
          //   <img
          //     class="h-48 md:h-64 xl:h-72 dark:filter dark:brightness-75 dark:contrast-125"
          //     src={notFound}
          //     alt="404 Page not found!"
          //     width="596"
          //     height="324"
          //   />
        }
        <img
          class="h-48 md:h-64 xl:h-72 dark:filter dark:brightness-75 dark:contrast-125"
          src={notFound}
          alt="404 Page not found!"
        />
      </div>
      <div
        class="flex flex-col items-center p-4 place-content-center mt-40 lg:mt-52 xl:mt-40"
      >
        <div class="text-3xl font-bold font-display md:text-4xl xl:text-3xl">
          <span>Sorry we couldn't find this page.</span>
        </div>
        <div class="text-lg mt-4">
          <span
            >But don't worry, you can find plenty of other things on our
            homepage.</span
          >
        </div>
        <Button
          href="/"
          color="bg-geraldine-700 hover:bg-geraldine-600 dark:bg-geraldine-400 dark:hover:bg-geraldine-500 mt-4"
          >Back to Home</Button
        >
      </div>
    </div>
  </div>
  <!-- Full body element end -->
</Layout>
