---
// Component Imports
import Page from "../layouts/Page.astro";
import Head from "../layouts/Head.astro";
import Hero from "../layouts/WorkHero.astro";
import captivatingJourneys from "../assets/images/captivating-journeys.png";
import captivatingJourneysFull from "../assets/images/captivating-journeys-lg.png";
import Modal from "../components/Modal.astro";
import { Image } from "astro:assets";

const meta = {
  title: "Captivating Journeys",
  description: "This is a responsive layout for a one-page travel website.",
};
---

<Page>
  <Head slot="head" {meta} />
  <Hero />
  <main
    id="content-wrapper"
    class="container mxa py-6 px-8 md:py-24 md:px-0 lg:py-12"
  >
    <div class="h-auto min-h-full space-y-12 my-2 text-left px-4 lg:px-8">
      <div
        id="pagination"
        class="flex flex-wrap space-x-2 bg-sage-2 dark:bg-sageDark-2 rounded-1 shadow-md p-4 items-center border border-sage-6 dark:border-sageDark-6"
      >
        <a
          href="/"
          class="transition-all ease-in hover:ease-out dark:hover:text-crimsonDark-11 hover:text-crimson-11 duration-200 focus:outline-none focus:border-b-4 focus:border-sage-6 dark:focus:border-sageDark-6"
          tabindex="0">Home</a
        >
        <span
          class="h-6 w-6 i-solar:double-alt-arrow-right-line-duotone"
          role="none"></span>
        <a
          href="/work/#content-wrapper"
          class="transition-all ease-in hover:ease-out dark:hover:text-crimsonDark-11 hover:text-crimson-11 duration-200 focus:outline-none focus:border-b-4 focus:border-sage-6 dark:focus:border-sageDark-6"
          tabindex="0">Work</a
        >
        <span
          class="h-6 w-6 i-solar:double-alt-arrow-right-line-duotone"
          role="none"></span>
        <a
          href="#"
          class="focus:outline-none focus:border-b-4 focus:border-sage-6 dark:focus:border-sageDark-6"
          tabindex="0">Captivating Journeys</a
        >
      </div>

      <h3 class="font-display tracking-tight my-6 text-f-xl fw600">
        Captivating
        <span class="text-crimson-11"> Journeys</span>
      </h3>
      <div class="flex flex-col items-start md:flex-row">
        <div
          class="flex border-2 border-sage-6 flex-shrink-0 shadow-lg shadow-crimson-9/50 my-4 mx-2 md:w-1/2 lg:w-auto"
        >
          <Image
            class="h-auto object-contain w-full dark:filter dark:brightness-75 dark:contrast-125"
            width={480}
            height={270}
            src={captivatingJourneys}
            alt="Captivating Journeys"
            role="img"
          />
        </div>

        <div class="flex flex-col space-y-4 my-4 px-2 md:pl-6">
          <p>
            This is a responsive layout for a one-page travel website. The
            slideshow is full-screen, draggable, autoplaying, and responsive.
          </p>

          <div class="flex items-start flex-wrap gap-x-2">
            <div>
              <a
                href="/data/design-1/"
                target="_blank"
                class="btn-crimson"
                rel="prefetch"
                tabindex="0"
              >
                <span
                  class="w-5 h-5 mr-2 text-current i-solar-square-top-down-linear"
                ></span>
                 Demo
              </a>
            </div>

            <Modal id="dialog" open="Screenshot">
              <main
                slot="main"
                class="mt-3 dark:bg-sageDark-4 p-10 grid place-content-center"
              >
                <picture>
                  <source
                    media="(max-width:768px)"
                    srcset={captivatingJourneysFull.src}
                    width="250"
                  />
                  <source
                    media="(max-width:1024px)"
                    srcset={captivatingJourneysFull.src}
                    width="375"
                  />
                  <img
                    src={captivatingJourneysFull.src}
                    class={"h-auto dark:filter dark:brightness-75 dark:contrast-125"}
                    width="500"
                    alt="Captivating Journeys Full Image"
                    role="img"
                  />
                </picture>
              </main>
              <div class="flex justify-end" slot="close">
                <button class="btn-red m-5">Close</button>
              </div>
            </Modal>
          </div>
        </div>
      </div>
    </div>
  </main>
</Page>
