---
// Component Imports
import Layout from "../layouts/PageLayout.astro";
import Hero from "../layouts/WorkHero.astro";
import captivatingJourneys from "../images/captivating-journeys.png";
import captivatingJourneysFull from "../images/captivating-journeys-lg.png";
import Modal from "../components/modal.astro";

const meta = {
  title: "Captivating Journeys",
  description: "This is a responsive layout for a one-page travel website.",
};
---

<Layout {meta}>
  <Hero />
  <div id="content-wrapper" class="md: mt-40 lg:mt-0 2xl:mt-80 container p-8 mx-auto lg:p-24 dark:bg-dark-900 dark:text-white">
    <div class="container h-auto min-h-full px-4 my-2 space-y-5 leading-relaxed text-left lg:px-8">
      <div id="pagination" class="flex flex-wrap items-center space-x-4">
        <a href="/" class="hover:duration-200 hover:transition-all hover:ease hover:text-geraldine-500 focus:border-b-4 focus:outline-none focus:border-geraldine-500">Home</a>
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-label="arrow">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7"></path>
        </svg>
        <a href="/work#content-wrapper" class="hover:duration-200 hover:transition-all hover:ease hover:text-geraldine-500 focus:border-b-4 focus:outline-none focus:border-geraldine-500">Work</a>
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-label="arrow">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7"></path>
        </svg>
        <a href="#" class="focus:border-b-4 focus:outline-none focus:border-geraldine-500">Captivating Journeys</a>
      </div>

      <div class="my-6 text-3xl font-semibold font-display">
        Captivating
        <span class="text-red-600 dark:text-red-300">Journeys</span>
      </div>
      <div class="flex flex-col items-start md:flex-row">
        <div class="flex flex-shrink-0 mx-2 my-4 border-2 border-gray-200 shadow-lg dark:border-gray-800 md:w-1/2 lg:w-auto hover:border-geraldine-400 dark:hover:border-geraldine-400">
          <img class="object-contain w-full h-auto dark:filter dark:brightness-75 dark:contrast-125" src={captivatingJourneys} alt="Captivating Journeys" />
        </div>

        <div class="flex flex-col px-2 mb-8 space-y-3 md:pl-6">
          <p>This is a responsive layout for a one-page travel website. The slideshow is full width, draggable, autoplay and is responsive too.</p>
          <div class="flex items-center">
            <div class="mr-2">
              <a class="inline-flex items-center px-4 py-2.5 text-sm font-semibold text-white dark:text-dark-700 transition-all duration-150 rounded-md shadow-md bg-cyan-600 ease hover:bg-cyan-500 focus:ring-4 focus:outline-none focus:ring-cyan-400 dark:bg-cyan-400 dark:hover:bg-cyan-500 dark:focus:ring-cyan-200" href="data/design-1/" target="_blank" rel="noopener">
                <svg class="w-5 h-5 mr-2 text-current" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-label="Link">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
                <span>Demo</span>
              </a>
            </div>
            <div>
              <a id="modal1-trigger" class="inline-flex items-center px-4 py-2.5 text-sm font-semibold text-white dark:text-dark-700 transition-all duration-150 rounded-md shadow-md cursor-pointer ease bg-emerald-600 hover:bg-emerald-500 focus:ring-4 focus:outline-none focus:ring-emerald-400 dark:bg-emerald-400 dark:hover:bg-emerald-500 dark:focus:ring-emerald-200" tabindex="0">
                <svg class="w-5 h-5 mr-2 text-current" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-label="Image">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <span>Screenshot</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <Modal triggerId="modal1-trigger" title="Captivating Journeys">
    <div class="mt-3 text-center">
      <img class="dark:filter dark:brightness-75 dark:contrast-125" src={captivatingJourneysFull} alt="Captivating Journeys Full Image" />
    </div>
  </Modal>
</Layout>
