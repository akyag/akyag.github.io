---
// Component Imports
import Page from "../layouts/Page.astro";
import Head from "../layouts/Head.astro";
import Hero from "../layouts/WorkHero.astro";
import captivatingJourneys from "../images/captivating-journeys.png";
import captivatingJourneysFull from "../images/captivating-journeys-lg.png";
import Modal from "../components/Modal.astro";
import ButtonIcon from "../components/ButtonIcon.astro";
import { Image, Picture } from "@astrojs/image/components";

const meta = {
  title: "Captivating Journeys",
  description: "This is a responsive layout for a one-page travel website.",
};
---

<Page>
  <Head slot="head" {meta} />
  <Hero />
  <main
    id="content-wrapper"
    class="container mx-auto py-6 px-8 md:py-24 md:px-0 lg:py-12 dark:bg-dark-900 dark:text-white"
  >
    <div
      class="h-auto min-h-full space-y-12 my-2 text-left leading-relaxed px-4 lg:px-8"
    >
      <div
        id="pagination"
        class="flex flex-wrap space-x-2 items-center dark:bg-dark-300 rounded-1 shadow-md p-4"
      >
        <a
          href="/"
          class="hover:transition-all hover:ease hover:text-geraldine-500 hover:duration-200 focus:outline-none focus:border-b-4 focus:border-slate-500"
          tabindex="0">Home</a
        >
        <span class="h-6 w-6 i-mdi:chevron-double-right"></span>
        <a
          href="/work/#content-wrapper"
          class="hover:transition-all hover:ease hover:text-geraldine-500 hover:duration-200 focus:outline-none focus:border-b-4 focus:border-slate-500"
          tabindex="0">Work</a
        >
        <span class="h-6 w-6 i-mdi:chevron-double-right"></span>
        <a
          href="#"
          class="focus:outline-none focus:border-b-4 focus:border-slate-500"
          tabindex="0">Captivating Journeys</a
        >
      </div>

      <div class="font-display text-f-xl fw600">
        Captivating
        <span class="text-rose-600 dark:text-rose-300">Journeys</span>
      </div>
      <div class="flex flex-col items-start md:flex-row">
        <div
          class="flex border-2 border-gray-200 flex-shrink-0 shadow-lg my-4 mx-2 md:w-1/2 lg:w-auto dark:border-gray-800 hover:border-geraldine-400 dark:hover:border-geraldine-400"
        >
          <Image
            class="h-auto object-contain w-full dark:filter dark:brightness-75 dark:contrast-125"
            width={480}
            height={270}
            src={captivatingJourneys}
            alt="Captivating Journeys"
          />
        </div>

        <div class="flex flex-col space-y-4 my-4 px-2 md:pl-6">
          <p>
            This is a responsive layout for a one-page travel website. The
            slideshow is full-screen, draggable, autoplaying, and responsive.
          </p>
          <div class="flex flex-items-start flex-wrap">
            <div class="p-2">
              <ButtonIcon
                href="/data/design-1/"
                target="_blank"
                color="bg-rose-700 text-white hover:bg-rose-600"
                iconClass="w-5 h-5 mr-2 text-current i-bx-link-external"
              >
                Demo
              </ButtonIcon>
            </div>
            <div class="p-2">
              <ButtonIcon
                id="modal1-trigger"
                color="bg-gray-100 border-1 border-gray-300 hover:bg-gray-200 text-gray-700 dark:bg-slate-700 dark:border-gray-700 dark:text-white dark:hover:bg-slate-500 cursor-pointer"
                iconClass="w-5 h-5 mr-2 text-current i-icon-park-twotone:screenshot-one"
              >
                Screenshot
              </ButtonIcon>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  <Modal triggerId="modal1-trigger" title="Captivating Journeys">
    <div class="mt-3 grid place-content-center">
      <Picture
        class="dark:filter dark:brightness-75 dark:contrast-125"
        src={captivatingJourneysFull}
        alt="Captivating Journeys Full Image"
        widths={[250, 375, 500]}
        sizes="(max-width: 768px) 250px, (max-width: 1024px) 375px, 500px"
        aspectRatio={0.8}
      />
    </div>
  </Modal>
</Page>
