---
import { Icon } from "astro-icon";

const {
  label = "Toggle Menu",
  class:
    className = "ml-12 inline-flex items-center rounded-lg text-sm text-gray-700 transition hover:bg-gray-100 focus:outline-none focus:ring-4 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-800 dark:focus:ring-gray-700",
  iconClass = "w-8 h-8 dark:text-white",
  iconName = "icon-menu",
} = Astro.props;
---

<button type="button" class={className} aria-label={label} toggle-menu>
  <Icon name={iconName} class={iconClass} optimize={false} />
</button>
