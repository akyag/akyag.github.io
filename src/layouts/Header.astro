---
import headerLogo from "../images/logo.svg";
import ToggleTheme from "../core/ToggleTheme.astro";
import { Icon } from "astro-icon";
import ActiveLink from "../components/ActiveLink.astro";
import MobileNav from "./MobileNav.astro";
---

<header
  class="relative z-10 justify-between hidden max-w-6xl px-8 py-8 mx-auto md:flex xl:px-10"
>
  <div class="items-center">
    <a
      href="/"
      class="block focus:outline-none focus:ring-2 focus:ring-slate-700/50 focus:ring-offset-2 focus:ring-offset-transparent"
      tabindex="0"
    >
      <img src={headerLogo} width="80" height="45" alt="Web-o-Reviews" />
    </a>
  </div>
  <nav class="flex items-center space-x-4">
    <ActiveLink href={"/"}>Home</ActiveLink>
    <ActiveLink href={"/about/"}>About</ActiveLink>
    <ActiveLink href={"/design/"}>Design</ActiveLink>
    <ActiveLink href={"/work/"}>Work</ActiveLink>
    <ActiveLink href={"/contact/"}>Contact</ActiveLink>
    <Icon name="icon-sun" class="w-6 h-6 text-dark-500 dark:text-white" />
    <ToggleTheme />
    <Icon name="icon-moon" class="w-6 h-6 text-dark-500 dark:text-white" />
  </nav>
</header>
<MobileNav />
