---
import MobileActiveLink from "../components/MobileActiveLink.astro";
import MobileThemeToggle from "../components/MobileThemeToggle.astro";
import headerLogo from "../assets/images/logo.svg";
---

<header
  class=":uno: bg-gray-2 shadow-md w-screen top-0 z-30 fixed block md:hidden"
>
  <nav>
    <div class=":uno: mxa px-4 sm:px-6">
      <div class=":uno: flex h-24 items-center justify-between">
        <div class=":uno: flex items-center">
          <div class=":uno: pl-4">
            <a href="/" class=":uno: block">
              <img
                src={headerLogo.src}
                width={80}
                height={45}
                alt="Web-o-Reviews"
                role="img"
                aria-label="Web-o-Reviews"
              />
            </a>
          </div>
        </div>
        <div class=":uno: flex content-end items-center">
          <div class=":uno: flex gap-x-4 items-center">
            <MobileThemeToggle />
            <div>
              <button
                class="text-gray-11 bg-gray-2 focus:border-none focus:outline-none focus:text-crimson-11"
                aria-label="Toggle Menu"
                toggle-menu
              >
                <span
                  class="h-12 w-12 i-solar:hamburger-menu-line-duotone"
                  id="menu-icon"></span>
              </button>
            </div>
            <div class="">
              <div
                class="bg-gray-2 rounded-lg h-auto divide-y-2 divide-gray-6 shadow-md mt-10 mr-4 grid py-0 right-0 w-48 z-20 grid-cols-1 fixed hidden"
                id="menu"
              >
                <MobileActiveLink href={"/"}>
                  <span class="h-6 w-6 i-solar:home-line-duotone" role="none"
                  ></span>
                  Home
                </MobileActiveLink>
                <MobileActiveLink href={"/about/"}>
                  <span class="h-6 w-6 i-solar:user-line-duotone" role="none"
                  ></span>
                  About
                </MobileActiveLink>
                <MobileActiveLink href={"/design/"}>
                  <span
                    class="h-6 w-6 i-solar:pallete-2-line-duotone"
                    role="none"></span>
                  Design
                </MobileActiveLink>
                <MobileActiveLink href={"/work/"}>
                  <span
                    class="h-6 w-6 i-solar:folder-open-line-duotone"
                    role="none"></span>
                  Work
                </MobileActiveLink>
                <MobileActiveLink href={"/archive/"}>
                  <span class="h-6 w-6 i-solar:archive-line-duotone" role="none"
                  ></span>
                  Archive
                </MobileActiveLink>
                <MobileActiveLink href={"/license/"}>
                  <span class="h-6 w-6 i-solar:card-2-line-duotone" role="none"
                  ></span>
                  License
                </MobileActiveLink>
                <MobileActiveLink href={"/contact/"}>
                  <span class="h-6 w-6 i-solar:mailbox-line-duotone" role="none"
                  ></span>
                  Contact
                </MobileActiveLink>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>
