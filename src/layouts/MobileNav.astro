---
import headerLogo from "../images/logo.svg";
import MobileActiveLink from "../components/MobileActiveLink.astro";
---

<header
  class="bg-gray-100 shadow-md w-screen top-0 z-30 fixed block md:hidden dark:bg-dark-900"
>
  <nav>
    <div class="mx-auto px-4 sm:px-6">
      <div class="flex h-24 items-center justify-between">
        <div class="flex items-center">
          <div class="pl-4">
            <a href="/" class="block">
              <img
                src={headerLogo}
                width="80"
                height="45"
                alt="Web-o-Reviews"
              />
            </a>
          </div>
        </div>
        <div class="flex content-end items-center">
          <div class="flex gap-x-4 items-center">
            <div>
              <button
                class="h-12 w-12 block &focus:ring-offset-transparent &focus:ring-2 &focus:ring-slate-500/50 focus:outline-none focus:ring-offset-2"
                toggle-color-scheme
              >
                <span
                  class="h-8 transition-all ease-in w-8 duration-200 i-bx-sun &hover:text-geraldine-600 dark:h-8 dark:text-white dark:w-8 dark:i-bx-moon dark:&hover:text-geraldine-400"
                ></span>
              </button>
            </div>
            <div>
              <button
                class="dark:text-white"
                aria-label="Toggle Menu"
                toggle-menu
              >
                <span class="h-8 w-8 i-mdi-hamburger-menu" id="menu-icon"
                ></span>
              </button>
            </div>
            <div class="">
              <div
                class="bg-white rounded-lg h-auto divide-y-2 divide-gray-200 shadow-md mt-10 mr-4 grid py-0 right-0 w-48 z-20 grid-cols-1 fixed hidden dark:divide-dark-300 dark:bg-dark-500"
                id="menu"
              >
                {
                  /* class="bg-white rounded-md shadow-xl mt-2 py-2 right-0 w-48 z-20 absolute dark:bg-gray-900" */
                }
                <MobileActiveLink href={"/"}>
                  <span class="h-6 w-6 i-bx-home"></span>
                  Home</MobileActiveLink
                >
                <MobileActiveLink href={"/about/"}>
                  <span class="h-6 w-6 i-bx-user"></span>
                  About
                </MobileActiveLink>
                <MobileActiveLink href={"/design/"}>
                  <span class="h-6 w-6 i-bx-palette"></span>
                  Design
                </MobileActiveLink>
                <MobileActiveLink href={"/work/"}>
                  <span class="h-6 w-6 i-bx-briefcase"></span>
                  Work
                </MobileActiveLink>
                <MobileActiveLink href={"/archive/"}>
                  <span class="h-6 w-6 i-bx-archive"></span>
                  Archive
                </MobileActiveLink>
                <MobileActiveLink href={"/license/"}>
                  <span class="h-6 w-6 i-bx-credit-card-front"></span>
                  License
                </MobileActiveLink>
                <MobileActiveLink href={"/contact/"}>
                  <span class="h-6 w-6 i-bx-envelope"></span>
                  Contact
                </MobileActiveLink>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>
