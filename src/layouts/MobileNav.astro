---
import headerLogo from "../images/logo.svg";
import ToggleMenu from "../core/ToggleMenu.astro";
import ToggleTheme from "../core/ToggleTheme.astro";
import MobileActiveLink from "../components/MobileActiveLink.astro";
import { Icon } from "astro-icon";
---

<header class="fixed top-0 z-30 block w-screen shadow-md md:hidden bg-gray-100 dark:bg-dark-900">
  <nav>
    <div class="px-4 mx-auto sm:px-6">
      <div class="flex items-center justify-between h-24">
        <div class="flex items-center">
          <div class="pl-4">
            <a href="/" class="block">
              <img src={headerLogo} width="80" height="45" alt="Web-o-Reviews" />
            </a>
          </div>
        </div>
        <div class="flex content-end pr-6 items-center">
          <div class="inline-flex">
            <!-- <Icon name="tabler:sun" class="w-6 h-6 mx-3 text-dark-500 dark:text-gray-100" />
            <label for="check2" class="relative h-6 w-12 cursor-pointer rounded-full bg-geraldine-500">
              <input class="peer sr-only" type="checkbox" id="check2" data-aw-toggle-color-scheme />
              <span class="absolute left-1 top-1 h-4/6 w-1/3 rounded-full bg-white transition-all duration-500 peer-checked:left-7 peer-checked:bg-dark-600 shadow-lg"></span>
            </label>
            <Icon name="tabler:moon" class="w-6 h-6 mx-3 text-dark-500 dark:text-gray-100" />
          </div> -->
            <svg class="w-6 h-6 text-dark-500 dark:text-white mr-2" xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" preserveAspectRatio="xMidYMid meet" viewBox="0 0 24 24"><g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"><circle cx="12" cy="12" r="4"></circle><path d="M3 12h1m8-9v1m8 8h1m-9 8v1M5.6 5.6l.7.7m12.1-.7l-.7.7m0 11.4l.7.7m-12.1-.7l-.7.7"></path></g></svg>
            <label for="check2" class="relative h-6 w-12 cursor-pointer rounded-full bg-geraldine-500">
              <input class="peer sr-only" type="checkbox" id="check2" toggle-color-scheme />
              <span class="absolute left-1 top-1 h-4/6 w-1/3 rounded-full bg-white transition-all duration-500 peer-checked:left-7 peer-checked:bg-dark-600 shadow-lg"></span>
            </label>
            <svg class="w-6 h-6 text-dark-500 dark:text-white ml-2" xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" preserveAspectRatio="xMidYMid meet" viewBox="0 0 24 24"><path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3h.393a7.5 7.5 0 0 0 7.92 12.446A9 9 0 1 1 12 2.992z"></path></svg>
            <ToggleMenu />
            <!-- <a href="" class="block px-2 py-2 text-lg font-semibold bg-gray-100 rounded-md dark:bg-dark-500 dark:text-white">
            <svg class="inline-block w-6 h-6 m-1" viewBox="0 0 20 20"><path fill="currentColor" fill-rule="evenodd" d="M2 4.75A.75.75 0 0 1 2.75 4h14.5a.75.75 0 0 1 0 1.5H2.75A.75.75 0 0 1 2 4.75ZM2 10a.75.75 0 0 1 .75-.75h14.5a.75.75 0 0 1 0 1.5H2.75A.75.75 0 0 1 2 10Zm0 5.25a.75.75 0 0 1 .75-.75h14.5a.75.75 0 0 1 0 1.5H2.75a.75.75 0 0 1-.75-.75Z" clip-rule="evenodd"></path></svg>
          </a> -->
            <div class="">
              <div class="fixed hidden right-0 z-20 w-48 mr-4 h-auto py-0 mt-10 bg-white dark:bg-dark-500 rounded-lg" id="menu">
                <!-- class="absolute right-0 z-20 w-48 py-2 mt-2 bg-white rounded-md shadow-xl dark:bg-gray-900" -->
                <MobileActiveLink href={"/"}>
                  <svg class="inline-block w-6 h-6 mb-1 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                  </svg>
                  Home</MobileActiveLink
                >
                <MobileActiveLink href={"/about"}>
                  <svg class="inline-block w-6 h-6 mb-1 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                  About
                </MobileActiveLink>
                <MobileActiveLink href={"/design"}>
                  <svg class="inline-block w-6 h-6 mb-1 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"></path>
                  </svg>
                  Design
                </MobileActiveLink>
                <MobileActiveLink href={"/work"}>
                  <svg class="inline-block w-6 h-6 mb-1 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                  Work
                </MobileActiveLink>
                <MobileActiveLink href={"/archive"}>
                  <svg class="inline-block w-6 h-6 mb-1 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path>
                  </svg>
                  Archive
                </MobileActiveLink>
                <MobileActiveLink href={"/license"}>
                  <svg class="inline-block w-6 h-6 mb-1 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
                  </svg>
                  License
                </MobileActiveLink>
                <MobileActiveLink href={"/contact"}>
                  <svg class="inline-block w-6 h-6 mb-1 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                  Contact
                </MobileActiveLink>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>
