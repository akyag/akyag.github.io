---
let currentDate = new Date().getFullYear();
import Backtotop from "../components/BackToTop.astro";
import footerLogo from "../images/logo-white.svg";
import AstroDark from "../images/astro-dark.svg";
import Button from "../components/Button.astro";
---

<footer
  class="h-auto py-12 mt-12 text-white divide-y-2 divide-dark-50 bg-dark-800 dark:bg-dark-800"
>
  <div
    class="flex flex-col items-center justify-center max-w-6xl mx-auto my-12 space-y-8 md:space-y-0 md:space-x-8 md:justify-around md:flex-row"
  >
    <div class="text-2xl font-bold sm:text-3xl lg:text-5xl font-display">
      Interested in Collaboration?
    </div>
    <Button
      href="/contact/"
      color="bg-green-700 hover:bg-green-600 dark:bg-green-400 dark:hover:bg-green-500 relative"
    >
      <span class="absolute top-0 right-0 flex w-3 h-3 -mt-1 -mr-1">
        <span
          class="absolute inline-flex w-full h-full bg-green-400 rounded-full opacity-75 animate-ping"
        ></span>
        <span
          class="relative inline-flex w-3 h-3 bg-green-300 rounded-full dark:bg-red-600"
        ></span>
      </span>
      Let's Talk
    </Button>
  </div>
  <div
    class="flex flex-col items-center justify-around mx-auto max-w-6xl pt-12 mb-12 md:flex-row md:items-end md:px-6 lg:px-8"
  >
    <div class="flex flex-row">
      <div class="w-40">
        <span class="font-semibold flex justify-center uppercase"
          >Information</span
        >
        <div
          class="mt-4 grid items-center grid-cols-6 leading-relaxed divide-x-2 divide-dark-50 group"
        >
          <div class="col-span-2 ml-5">
            <svg
              class="w-6 h-6 text-teal-500 transition-colors duration-200 ease-out group-hover:text-geraldine-600"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <title>License</title>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"
              ></path>
            </svg>
          </div>
          <div class="col-span-4">
            <a
              href="/license/"
              class="mx-4 text-gray-300 hover:transition-all hover:duration-200 hover:ease-out dark:text-white group-hover:text-geraldine-600 dark:group-hover:text-geraldine-600 focus:ring-2 focus:ring-slate-200/50 focus:ring-offset-2 focus:ring-offset-dark-800 focus:outline-none"
              tabindex="0">License</a
            >
          </div>
        </div>
        <div
          class="grid items-center grid-cols-6 leading-relaxed divide-x-2 divide-dark-50 group"
        >
          <div class="col-span-2 ml-5">
            <svg
              class="w-6 h-6 text-teal-500 transition-colors duration-200 ease-out group-hover:text-geraldine-600"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <title>Archive</title>
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"
              ></path>
            </svg>
          </div>
          <div class="col-span-4">
            <a
              href="/archive/"
              class="mx-4 text-gray-300 hover:transition-all hover:duration-200 hover:ease-out dark:text-white group-hover:text-geraldine-600 dark:group-hover:text-geraldine-600 focus:ring-2 focus:ring-slate-200/50 focus:ring-offset-2 focus:ring-offset-dark-800 focus:outline-none"
              tabindex="0">Archive</a
            >
          </div>
        </div>
        <div
          class="grid items-center grid-cols-6 leading-relaxed divide-x-2 divide-dark-50 group"
        >
          <div class="col-span-2 ml-5">
            <svg
              class="w-6 h-6 text-teal-500 transition-colors duration-200 ease-out group-hover:text-geraldine-600"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <title>GitHub</title>
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <path
                d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"
              ></path>
            </svg>
          </div>
          <div class="col-span-4">
            <a
              class="inline-flex items-center mx-4 text-gray-300 hover:transition-all hover:duration-200 hover:ease-out dark:text-white group-hover:text-geraldine-600 dark:group-hover:text-geraldine-600 focus:ring-2 focus:ring-slate-200/50 focus:ring-offset-2 focus:ring-offset-dark-800 focus:outline-none"
              href="https://github.com/akyag"
              target="_blank"
              rel="noopener"
              tabindex="0"
              >GitHub
              <svg
                class="w-4 h-4 ml-1"
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-label="external-link"
              >
                <path
                  d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z"
                ></path>
                <path
                  d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z"
                ></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
      <div class="w-40">
        <span class="font-semibold flex justify-center text-center uppercase"
          >Find me on</span
        >
        <div
          class="mt-4 grid items-center grid-cols-6 leading-relaxed divide-x-2 divide-dark-50 group"
        >
          <div class="col-span-2 ml-5">
            <svg
              class="w-6 h-6 text-teal-500 transition-colors duration-200 ease-out group-hover:text-geraldine-600"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <title>LinkedIn</title>
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <rect x="4" y="4" width="16" height="16" rx="2"></rect>
              <line x1="8" y1="11" x2="8" y2="16"></line>
              <line x1="8" y1="8" x2="8" y2="8.01"></line>
              <line x1="12" y1="16" x2="12" y2="11"></line>
              <path d="M16 16v-3a2 2 0 0 0 -4 0"></path>
            </svg>
          </div>
          <div class="col-span-4">
            <a
              class="inline-flex items-center mx-4 text-gray-300 hover:transition-all hover:duration-200 hover:ease-out dark:text-white group-hover:text-geraldine-600 dark:group-hover:text-geraldine-600 focus:ring-2 focus:ring-slate-200/50 focus:ring-offset-2 focus:ring-offset-dark-800 focus:outline-none"
              href="https://www.linkedin.com/in/akshayghate/"
              target="_blank"
              rel="noopener"
              tabindex="0"
              >LinkedIn
              <svg
                class="w-4 h-4 ml-1"
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-label="external-link"
              >
                <path
                  d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z"
                ></path>
                <path
                  d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z"
                ></path>
              </svg>
            </a>
          </div>
        </div>
        <div
          class="grid items-center grid-cols-6 leading-relaxed divide-x-2 divide-dark-50 group"
        >
          <div class="col-span-2 ml-5">
            <svg
              class="w-6 h-6 text-teal-500 transition-colors duration-200 ease-out group-hover:text-geraldine-600"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <title>Twitter</title>
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <path
                d="M22 4.01c-1 .49 -1.98 .689 -3 .99c-1.121 -1.265 -2.783 -1.335 -4.38 -.737s-2.643 2.06 -2.62 3.737v1c-3.245 .083 -6.135 -1.395 -8 -4c0 0 -4.182 7.433 4 11c-1.872 1.247 -3.739 2.088 -6 2c3.308 1.803 6.913 2.423 10.034 1.517c3.58 -1.04 6.522 -3.723 7.651 -7.742a13.84 13.84 0 0 0 .497 -3.753c-.002 -.249 1.51 -2.772 1.818 -4.013z"
              ></path>
            </svg>
          </div>
          <div class="col-span-4">
            <a
              class="inline-flex items-center mx-4 text-gray-300 hover:transition-all hover:duration-200 hover:ease-out dark:text-white group-hover:text-geraldine-600 dark:group-hover:text-geraldine-600 focus:ring-2 focus:ring-slate-200/50 focus:ring-offset-2 focus:ring-offset-dark-800 focus:outline-none"
              href="https://twitter.com/akshayg"
              target="_blank"
              rel="noopener"
              tabindex="0"
              >Twitter
              <svg
                class="w-4 h-4 ml-1"
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-label="external-link"
              >
                <path
                  d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z"
                ></path>
                <path
                  d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z"
                ></path>
              </svg>
            </a>
          </div>
        </div>
        <div
          class="grid items-center grid-cols-6 leading-relaxed divide-x-2 divide-dark-50 group"
        >
          <div class="col-span-2 ml-5">
            <svg
              class="w-6 h-6 text-teal-500 transition-colors duration-200 ease-out group-hover:text-geraldine-600"
              viewBox="0 0 24 24"
              stroke-width="2"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <title>Facebook</title>
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <path
                d="M7 10v4h3v7h4v-7h3l1 -4h-4v-2a1 1 0 0 1 1 -1h3v-4h-3a5 5 0 0 0 -5 5v2h-3"
              ></path>
            </svg>
          </div>
          <div class="col-span-4">
            <a
              class="inline-flex items-center mx-4 text-gray-300 hover:transition-all hover:duration-200 hover:ease-out dark:text-white group-hover:text-geraldine-600 dark:group-hover:text-geraldine-600 focus:ring-2 focus:ring-slate-200/50 focus:ring-offset-2 focus:ring-offset-dark-800 focus:outline-none"
              href="https://www.facebook.com/Web.o.Reviews"
              target="_blank"
              rel="noopener"
              tabindex="0"
              >Facebook
              <svg
                class="w-4 h-4 ml-1"
                viewBox="0 0 20 20"
                fill="currentColor"
                aria-label="external-link"
              >
                <path
                  d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z"
                ></path>
                <path
                  d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z"
                ></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
    <div class="flex flex-col items-center mt-8">
      <div>
        <a
          href="/"
          class="block hover:transition-all hover:duration-200 hover:ease-out hover:scale-105 focus:ring-2 focus:ring-slate-200/50 focus:ring-offset-2 focus:ring-offset-dark-800 focus:outline-none"
          tabindex="0"
        >
          <img src={footerLogo} alt="Web-o-Reviews" width="250" height="32" />
        </a>
      </div>
      <div
        class="mt-4 flex flex-col items-center justify-center max-w-4xl grid-cols-1 gap-2 divide-y-2 divide-dark-50 lg:divide-y-0 lg:divide-x-2 lg:flex-row"
      >
        <div>
          <svg
            class="inline-block w-5 h-5 -mt-1 mr-1"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <title>Copyright</title>
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <circle cx="12" cy="12" r="9"></circle>
            <path d="M14.5 9a3.5 4 0 1 0 0 6"></path>
          </svg>
          2009 - {currentDate} - Built using <a
            href="https://astro.build"
            class="focus:ring-2 focus:ring-slate-200/50 focus:ring-offset-2 focus:ring-offset-dark-800 focus:outline-none"
            target="_blank"
            rel="noopener"
            tabindex="0"
            ><img
              src={AstroDark}
              class="w-16 h-6 inline-block mx-2"
              alt="Astro Dark Logo"
            />
          </a>
        </div>
        <div class="pt-2 pl-2 lg:pt-0">
          Designed with
          <svg
            class="inline-block w-6 h-6 text-red-600"
            viewBox="0 0 20 20"
            fill="currentColor"
          >
            <title>Heart</title>
            <path
              fill-rule="evenodd"
              d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"
              clip-rule="evenodd"></path>
          </svg>
          by Akshay Ghate.
        </div>
      </div>
      <Backtotop />
    </div>
  </div>
</footer>
