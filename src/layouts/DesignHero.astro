---
import designHero from "../images/web-design.svg";
import ScrollDown from "../components/ScrollDown.astro";
---

<section class="relative z-10" id="hero">
  <div class="container mx-auto py-12 2xl:py-36">
    <div
      class="grid grid-cols-1 place-items-center items-center gap-12 md:grid-cols-2"
    >
      <div class="grid place-items-center items-center">
        <h1
          class="text-f-2xl mt-28 text-center font-display font-bold leading-relaxed text-white md:mt-0"
        >
          Web Design
        </h1>
        <h2
          class="text-f-lg mt-2 text-center font-semibold leading-snug text-white"
        >
          <span
            class="rounded bg-geraldine-700 px-1 text-white dark:bg-teal-700"
            >Why choose me</span
          >? It's simple.
        </h2>
      </div>
      <div>
        {
          /*     <img
                 class="h-44 md:h-56 2xl:h-72 dark:filter dark:brightness-75 dark:contrast-125"
                 src={designHero}
                 alt="Design"
                 width="384"
                 height="324"
               />  */
        }
        <img
          class="h-auto w-[250px] dark:brightness-75 dark:contrast-125 dark:filter lg:w-[375px] 2xl:w-[500px]"
          src={designHero}
          alt="Design"
        />
      </div>
    </div>
    <ScrollDown />
  </div>
