---
import archiveHero from "../images/archive.svg";
import ScrollDown from "../components/ScrollDown.astro";
---

<section class="relative z-10" id="hero">
  <div class="container mx-auto py-12 2xl:py-36">
    <div
      class="grid grid-cols-1 place-items-center items-center gap-12 md:grid-cols-2"
    >
      <div class="grid place-items-center items-center">
        <h1
          class="text-f-2xl mt-28 text-center font-display font-bold leading-relaxed text-white md:mt-0 lg:text-5xl 2xl:text-7xl"
        >
          Archive
        </h1>
        <h2
          class="text-f-lg mt-2 text-center font-semibold leading-snug text-white"
        >
          Stuff that's not so new anymore.
        </h2>
      </div>
      <div>
        {
          /*<img
            class="h-44 md:h-56 2xl:h-72 dark:filter dark:brightness-75 dark:contrast-125"
            src={archiveHero}
            alt="Archive"
            width="311"
            height="324"
           />*/
        }
        <img
          class="h-auto w-[200px] dark:brightness-75 dark:contrast-125 dark:filter lg:w-[300px] 2xl:w-[400px]"
          src={archiveHero}
          alt="Archive"
        />
      </div>
    </div>
    <ScrollDown />
