---
import workHero from "../images/work.svg";
import ScrollDown from "../components/ScrollDown.astro";
---

<section class="relative z-10" id="hero">
  <div class="container mx-auto py-12 lg:py-24 2xl:py-36">
    <div
      class="grid grid-cols-1 place-items-center items-center gap-12 md:grid-cols-2"
    >
      <div class="grid place-items-center items-center">
        <h1
          class="text-f-2xl mt-28 text-center font-display fw700 leading-relaxed text-white md:mt-0"
        >
          Work
        </h1>
        <h2 class="text-f-lg mt-2 text-center fw600 leading-snug text-white">
          Some of my recent work.
        </h2>
      </div>
      <div>
        {
          /*     <img
                 class="h-44 md:h-56 2xl:h-72 dark:filter dark:brightness-75 dark:contrast-125"
                 src={workHero}
                 alt="Work"
                 width="453"
                 height="324"
               />   */
        }
        <img
          class="h-auto w-[300px] dark:brightness-75 dark:contrast-125 dark:filter lg:w-[450px] 2xl:w-[600px]"
          src={workHero}
          alt="Work"
        />
      </div>
    </div>
