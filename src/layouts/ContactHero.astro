---
import contactHero from "../assets/images/contact.svg";
import ScrollDown from "../components/ScrollDown.astro";
---

<section class="z-10 relative" id="hero">
  <div class="container mxa py-12 2xl:py-48">
    <div
      class="grid gap-12 grid-cols-1 place-items-center items-center md:grid-cols-2"
    >
      <div class="grid place-items-center items-center">
        <h1
          class="font-display mt-28 text-center leading-relaxed text-f-4xl fw700 md:mt-0"
        >
          Contact
        </h1>
        <h2 class="mt-2 text-f-lg text-center leading-snug fw600">
          Please complete the form below.
        </h2>
      </div>
      <div>
        <!-- <Picture
          class={"h-auto transform translate-x-25 op0 dark:filter dark:brightness-75 dark:contrast-125"}
          src={contactHero}
          widths={[200, 350, 400]}
          sizes="(max-width:768px) 200px, (max-width:1024px) 350px, 400px"
          aspectRatio={1.13}
          alt="Contact Me"
          role="presentation"
          id="ContactHero"
        /> -->
        <picture>
          <source
            media="(max-width:768px)"
            srcset={contactHero.src}
            width="200"
          />
          <source
            media="(max-width:1024px)"
            srcset={contactHero.src}
            width="350"
          />
          <img
            src={contactHero.src}
            class={"h-auto transform translate-x-25 op0 dark:filter dark:brightness-75 dark:contrast-125"}
            width="400"
            alt="Contact Me"
            role="presentation"
            id="ContactHero"
          />
        </picture>
      </div>
    </div>
    <ScrollDown />
  </div>
</section>
<script>
  import { animate, inView } from "motion";
  inView("#ContactHero", (info) => {
    animate(
      info.target,
      { opacity: 1, transform: "none" },
      { delay: 0.2, duration: 0.9, easing: [0.17, 0.55, 0.55, 1] },
    );
  });
</script>
