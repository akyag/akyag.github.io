---
const { href, id, target, hue } = Astro.props;
---

<a
  href={href}
  id={id}
  rel="prefetch"
  target={target}
  class:list={[
    "text-f-sm hover:ease-out transition-all ease-in duration-150 flex place-content-center items-center rounded-full px-6 py-2 fw600 text-white shadow-md focus:outline-none focus:ring-2 focus:ring-sage-7/50 focus:ring-offset-2 focus:ring-offset-transparent",
    hue || "bg-teal-9 hover:bg-teal-10 dark:hover:bg-tealDark-10",
  ]}
  tabindex="0"
  role="button"
>
  <slot />
</a>
