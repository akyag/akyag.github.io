---
const { href, id, target, color } = Astro.props;
---

<a
  href={href}
  id={id}
  rel="prefetch"
  target={target}
  class:list={[
    "text-f-sm hover:ease flex place-content-center items-center rounded-full px-6 py-3 fw600 text-white shadow-md hover:transition-all hover:duration-150 focus:outline-none focus:ring-2 focus:ring-slate-500/50 focus:ring-offset-2 focus:ring-offset-transparent dark:text-dark-700 w-5/6 sm:w-auto",
    color,
  ]}
  tabindex="0"
>
  <slot />
</a>
