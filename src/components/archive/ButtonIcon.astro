---
const { href, id, target, hue, iconClass } = Astro.props;
---

<a
  href={href}
  id={id}
  target={target}
  rel="prefetch"
  class:list={[
    "text-f-sm hover:ease-out ease-in flex justify-center items-center rounded-full pl-4 pr-6 py-2 fw600 text-white shadow-md transition-all duration-150 focus:outline-none focus:ring-2 focus:ring-sage-7/50 focus:ring-offset-2 focus:ring-offset-transparent",
    hue || "bg-teal-9 hover:bg-teal-10 dark:hover:bg-tealDark-10",
  ]}
  tabindex="0"
  role="button"
>
  <span class={iconClass} role="none"></span>
  <slot />
</a>
