<mobile-theme-toggle>
  <input
    type="checkbox"
    id="mobileswitch"
    role="switch"
    class="mobilethemeToggle"
    toggle-color-scheme
  />
  <label for="mobileswitch">
    <span class="i-solar:sun-2-bold absolute z-1 left-2" id="sun1"></span>
    <span class="i-solar:moon-bold absolute z-1 left-9" id="moon1"></span>
  </label>

