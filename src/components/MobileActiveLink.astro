---
export interface Props extends astroHTML.JSX.AnchorHTMLAttributes {}

const { href, ...props } = Astro.props as Props;

const isActive = href === Astro.url.pathname;
---

<a
  href={href}
  rel="prefetch"
  class:list={[
    "flex items-center gap-x-4 px-6 py-4 fw600 uppercase hover:text-geraldine-500   dark:text-white dark:hover:text-geraldine-400",
    {
      "text-teal-500! dark:text-teal-500!": isActive,
    },
  ]}
  tabindex="0"
  {...props}
>
  <slot />
</a>
