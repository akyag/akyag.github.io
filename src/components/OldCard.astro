---
const {
  imagepath,
  fulltitle,
  title,
  subtitle,
  feature1,
  feature2,
  feature3,
  feature4,
} = Astro.props;
import { Image } from "astro:assets";
---

<section>
  <div class="relative min-w-fit">
    <Image
      src={imagepath}
      alt={fulltitle}
      role="img"
      class="object-cover w-full h-full border bg-white dark:bg-sageDark-1 border-sage-6 dark:border-sageDark-6 rounded-md shadow-md dark:filter dark:brightness-75 dark:contrast-125 hover:filter ease-in hover:ease-out duration-200 hover:drop-shadow-lg"
    />
  </div>
  <div class="relative -mt-16 px-8">
    <div class="rounded-lg bg-slate-2 dark:bg-slateDark-3 px-6 py-3 shadow-lg">
      <div class="font-display fw600 tracking-wide">
        {title}<span class="text-teal-11"> {subtitle}</span>
      </div>
      <div>
        <ul class="text-f-sm mt-2 ml-2 list-inside">
          <li>{feature1}</li>
          <li>{feature2}</li>
          <li>{feature3}</li>
          <li>{feature4}</li>
        </ul>
      </div>
    </div>
  </div>
</section>
