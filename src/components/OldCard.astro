---
const {
  imagepath,
  fulltitle,
  title,
  subtitle,
  feature1,
  feature2,
  feature3,
  feature4,
} = Astro.props;
import { Image } from "@astrojs/image/components";
---

<div>
  <div class="relative w-full">
    <Image
      src={imagepath}
      alt={fulltitle}
      class="object-cover w-full h-56 max-w-sm border border-gray-300 rounded-lg shadow-md dark:border-dark-600 dark:filter dark:brightness-75 dark:contrast-125"
    />
  </div>
  <div class="relative px-4 -mt-16 md:px-12">
    <div
      class="px-6 py-3 rounded-lg shadow-lg bg-gray-50 dark:border-dark-600 dark:bg-dark-700"
    >
      <div class="text-xl font-semibold font-display">
        {title}<span class="text-rose-700 dark:text-rose-400"> {subtitle}</span>
      </div>
      <div>
        <ul class="mt-2 ml-2 text-sm list-inside">
          <li>{feature1}</li>
          <li>{feature2}</li>
          <li>{feature3}</li>
          <li>{feature4}</li>
        </ul>
      </div>
    </div>
  </div>
</div>
