---
const { href, id, target, color, iconClass, iconName } = Astro.props;
import { Icon } from "astro-icon";
---

<a
  href={href}
  id={id}
  target={target}
  rel="prefetch"
  class:list={[
    "flex items-center content-center px-6 text-f-sm font-semibold text-white dark:text-dark-700 rounded-md shadow-md hover:transition-all hover:duration-150 hover:ease focus:outline-none focus:ring-2 focus:ring-slate-500/50 focus:ring-offset-2 focus:ring-offset-transparent",
    color,
  ]}
  tabindex="0"
>
  <Icon name={iconName} class={iconClass} />
  <slot />
</a>
