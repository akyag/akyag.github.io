---
const { href, color, iconClass, iconName } = Astro.props;
import { Icon } from "astro-icon";
---

<a
  href={href}
  rel="prefetch"
  class:list={[
    "flex items-center content-center px-6 h-12 text-sm font-semibold text-white dark:text-dark-700 rounded-md shadow-md hover:transition-all hover:duration-150 hover:ease focus:outline-none focus:ring-2 focus:ring-geraldine-400 ",
    color,
  ]}
>
  <Icon name={iconName} class={iconClass} />
  <slot />
</a>
