---
const { href, id, target, color, iconClass, iconName } = Astro.props;
import { Icon } from "astro-icon";
---

<a
  href={href}
  id={id}
  target={target}
  rel="prefetch"
  class:list={[
    "text-f-sm hover:ease flex place-content-center items-center rounded-full pl-4 pr-6 py-3 font-semibold text-white shadow-md hover:transition-all hover:duration-150 focus:outline-none focus:ring-2 focus:ring-slate-500/50 focus:ring-offset-2 focus:ring-offset-transparent dark:text-dark-700 w-5/6 sm:w-auto",
    color,
  ]}
  tabindex="0"
>
  <Icon name={iconName} class={iconClass} />
  <slot />
</a>
