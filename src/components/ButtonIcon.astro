---
const { href, id, target, hue, iconClass } = Astro.props;
---

<a
  href={href}
  id={id}
  target={target}
  rel="prefetch"
  class:list={[
    ":uno: text-f-sm hover:ease flex justify-center items-center rounded-full pl-4 pr-6 py-2 fw600 text-white shadow-md hover:transition-all hover:duration-150 focus:outline-none focus:ring-2 focus:ring-radixgray-7/50 focus:ring-offset-2 focus:ring-offset-transparent bg-hue9 hover:bg-hue10",
    hue || "hue-radixteal",
  ]}
  tabindex="0"
  role="button"
>
  <span class={iconClass} role="none"></span>
  <slot />
</a>
