---
export interface Props extends astroHTML.JSX.AnchorHTMLAttributes {}

const { href, ...props } = Astro.props as Props;

const isActive = href === Astro.url.pathname;
---

<a
  href={href}
  rel="prefetch"
  class:list={[
    ":uno: text-f-base font-display text-gray-12 hover:text-crimson-11 hover:transition-all hover:duration-200 hover:ease-in-out focus:border-b-4 focus:border-crimson-11 focus:outline-none",
    {
      "border-b-4 border-crimson-11": isActive,
    },
  ]}
  tabindex="0"
  {...props}
>
  <slot />
</a>
